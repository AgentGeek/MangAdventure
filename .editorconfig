root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
indent_size = 2

[*.js{on,}]
indent_size = 2

[*.y{a,}ml]
indent_size = 2

[*.{s,}css]
indent_size = 2

[*.md]
indent_size = 2

[*.rst]
indent_size = 3

