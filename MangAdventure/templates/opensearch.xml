<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription
    xmlns="http://a9.com/-/spec/opensearch/1.1/"
    xmlns:moz="http://www.mozilla.org/2006/browser/search/">
    <ShortName>{{ name }}</ShortName>
    <Description>Search {{ host }}</Description>
    <Image width="16" height="16" type="{{ icon|get_type }}">
      {{ icon }}
    </Image>
    <Url method="GET" type="text/html"
         template="{{ url }}/search/?q={searchTerms}"/>
    <Url type="application/opensearchdescription+xml"
         rel="self" template="{{ url }}/opensearch.xml"/>
    <Developer>MangAdventure Development Team</Developer>
    <moz:SearchForm>{{ url }}/search/</moz:SearchForm>
    <moz:UpdateUrl>{{ url }}/opensearch.xml</moz:UpdateUrl>
</OpenSearchDescription>

